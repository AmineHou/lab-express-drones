<h2>Update the drone</h2>

<form action="/drones/{{droneToEdit._id}}/edit" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="{{droneToEdit.name}}" />
  <label for="propellers">Propellers</label>
  <input
    type="number"
    id="propellers"
    name="propellers"
    value="{{droneToEdit.propellers}}"
  />
  <label for="maxSpeed">Max Speed</label>
  <input
    type="number"
    id="maxSpeed"
    name="maxSpeed"
    value="{{droneToEdit.maxSpeed}}"
  />
  <button>Update Drone</button>
</form>